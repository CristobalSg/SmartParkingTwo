{
  "name": "smart-parking-database",
  "version": "1.0.0",
  "description": "Base de datos para Smart Parking System",
  "main": "index.js",
  "scripts": {
    "setup": "pnpm install && pnpm prisma generate",
    "db:generate": "pnpm prisma generate",
    "db:push": "pnpm prisma db push",
    "db:migrate": "pnpm prisma migrate dev",
    "db:seed": "pnpm tsx prisma/seed.ts",
    "db:reset": "pnpm prisma migrate reset --force && pnpm run db:seed",
    "db:studio": "pnpm prisma studio",
    "db:format": "pnpm prisma format",
    "db:validate": "pnpm prisma validate",
    "dev": "pnpm run db:push && pnpm run db:seed && pnpm run db:studio"
  },
  "keywords": ["prisma", "postgresql", "database", "smart-parking"],
  "author": "Smart Parking Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
